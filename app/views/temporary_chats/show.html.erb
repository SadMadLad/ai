<div data-controller="chat" class="w-full" data-chat-uuid-value="<%= @uuid %>">
  <div class="flex flex-col gap-1.5" id="<%= chat_id @uuid %>" data-chat-target="container">
  </div>

  <%= form_with scope: :chat, class: "w-full", data: { chat_target: "form", action: "turbo:submit-end->chat#clear" }, url: temporary_chat_path do |form| %>
    <%= form.hidden_field :uuid, value: @uuid %>

    <div class="my-2.5">
      <%= form.text_field :message, class: "rounded-lg py-2.5 text-lg border border-gray-400 w-full px-4", data: { chat_target: "input" },  required: true %>
    </div>

    <%= form.submit "Send", class: "bg-pink-500 w-full rounded-lg py-2.5 px-2 text-lg text-white text-xl", data: { chat_target: "submitButton" } %>
  <% end %>
</div>
